<configuration>
    <appSettings>
        <add key="RetryCount" value="3"/>
        
        <!-- NoSQL Provider Settings -->
        <add key="NoSql.RetryCount" value="3"/>
        <add key="NoSql.RetryDelaySeconds" value="1"/>
        <add key="NoSql.MaxRetryDelaySeconds" value="30"/>
        
        <!-- SQL Provider Settings -->
        <add key="Sql.RetryCount" value="2"/>
        <add key="Sql.RetryDelaySeconds" value="2"/>
        <add key="Sql.MaxRetryDelaySeconds" value="30"/>
        
        <!-- Cache Settings -->
        <add key="Cache.DurationMinutes" value="5"/>
        
        <!-- Circuit Breaker Settings -->
        <add key="CircuitBreaker.WindowHours" value="1"/>
        <add key="CircuitBreaker.ErrorThreshold" value="10"/>
        <add key="CircuitBreaker.MaxErrorCount" value="20"/>
    </appSettings>
    <startup>
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.8"/>
    </startup>
</configuration>
